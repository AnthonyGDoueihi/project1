<h1>Edit Directory</h1>

<div class='ajax-reloadable'>

  <p><%= flash[:nodeerror] %></p>

  <%= form_for Node.new, :remote => true do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= hidden_field_tag :user_id, value: @user.id %>
    <%= submit_tag 'Create' %>
    <%= label_tag :id, "Root Directory"%>
    <%= radio_button_tag :id, "#{(@user.nodes.find_by :name => 'root').id}", true %>

    <div id="folder-tree">
      <%== editableChildren @user.nodes[0] %>
    </div>
    <% end %>
</div>

